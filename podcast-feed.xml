---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:podcast="https://github.com/Podcastindex-org/podcast-namespace/blob/main/docs/1.0.md">
	<channel>
		<title>{{ site.title }}</title>
		<description>{{ site.description }}</description>
		<link>{{ site.url }}</link>
		<language>en-US</language>
		<generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
		<pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
		<managingEditor>{{ site.email }} (Marc Barrowclift)</managingEditor>
		<webMaster>{{ site.email }} (Marc Barrowclift)</webMaster>
		<image>
			<url>{{ site.dropbox-url }}/assets/cover-art.jpg</url>
			<title>{{ site.title }}</title>
			<link>{{ site.url }}</link>
		</image>
		<copyright>© 2017-{{ site.time | date: "%Y" }} Marc Barrowclift</copyright>

		<podcast:guid>7cb2e396-f4e2-5d79-a7a6-584baa119f1e</podcast:guid>
		<podcast:medium>podcast</podcast:medium>
		<podcast:images srcset="{{ site.dropbox-url }}/assets/podcast-art-2000w.jpg 2000w,
								{{ site.dropbox-url }}/assets/podcast-art-1000w.jpg 1000w,
								{{ site.dropbox-url }}/assets/podcast-art-500w.jpg 500w,
								{{ site.dropbox-url }}/assets/podcast-art-250w.jpg 250w" />
		<podcast:person href="https://barrowclift.me" img="{{ site.url }}/images/about/marc.jpg">Marc Barrowclift</podcast:person>
		<podcast:person href="{{ site.url }}/about/" img="{{ site.url }}/images/about/michael.jpg">Michael Barrowclift</podcast:person>

		<itunes:author>{{ site.creator }}</itunes:author>
		<itunes:explicit>no</itunes:explicit>
		<itunes:type>episodic</itunes:type>
		<itunes:category text="Music">
			<itunes:category text="Music Commentary"/>
		</itunes:category>
		<itunes:owner>
			<itunes:name>{{ site.creator }}</itunes:name>
			<itunes:email>{{ site.email }}</itunes:email>
		</itunes:owner>
		<itunes:image href="{{ site.dropbox-url }}/assets/podcast-art.jpg" />
		<itunes:copyright>© 2017-{{ site.time | date: "%Y" }} Marc Barrowclift</itunes:copyright>
		<itunes:summary>{{ site.description }}</itunes:summary>
		<itunes:subtitle>{{ site.description }}</itunes:subtitle>

		{% for post in site.posts %}
		{% if post.layout == 'podcast' %}
		<item>
			<title>{{ post.episode }}: {{ post.title | xml_escape }}</title>
			<description><![CDATA[{{ post.content | cdata_escape }}]]></description>
			<link>{{ post.url | prepend: site.url }}</link>
			<guid isPermaLink="true">{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/{{ post.podcast-filename | xml_escape }}</guid>
			<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
			<author>{{ site.creator }}</author>
			<enclosure url="{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/{{ post.podcast-filename | xml_escape }}" length="{{ post.podcast-size-in-bytes | xml_escape }}" type="audio/mpeg"/>

			<podcast:images srcset="{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/images/episode-art-2000w.jpg 2000w,
									{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/images/episode-art-1000w.jpg 1000w,
									{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/images/episode-art-500w.jpg 500w,
									{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/images/episode-art-250w.jpg 250w" />
			<podcast:episode>{{ post.episode }}</podcast:episode>
			<podcast:chapters url="{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/chapters/toc.json" type="application/json+chapters" />
			{% if post.includes-aimee %}
			<podcast:person href="https://barrowclift.me" img="{{ site.url }}/images/about/marc.jpg">Marc Barrowclift</podcast:person>
			<podcast:person href="{{ site.url }}/about/" img="{{ site.url }}/images/about/michael.jpg">Michael Barrowclift</podcast:person>
			<podcast:person href="{{ site.url }}/about/" img="{{ site.url }}/images/about/aimee.jpg">Aimee Guarnaccio</podcast:person>
			{% endif %}
			{% if post.guests %}
			{% for guest in post.guests %}
			<podcast:person href="https://barrowclift.me" img="{{ site.url }}/images/about/marc.jpg">Marc Barrowclift</podcast:person>
			<podcast:person href="{{ site.url }}/about/" img="{{ site.url }}/images/about/michael.jpg">Michael Barrowclift</podcast:person>
			<podcast:person role="guest" href="{{ guest.href }}" img="{{ guest.img }}">{{ guest.name }}</podcast:person>
			{% endfor %}
			{% endif %}

			<itunes:image href="{{ site.dropbox-url }}/{{ post.album-name | xml_escape }}/images/episode-art.jpg" />
			<itunes:explicit>{% if post.podcast-explicit %}yes{% else %}no{% endif %}</itunes:explicit>
			<itunes:episodeType>full</itunes:episodeType>
			<itunes:title>{{ post.title | xml_escape }}</itunes:title>
			<itunes:author>{{ site.creator }}</itunes:author>
			<itunes:episode>{{ post.episode }}</itunes:episode>
			<itunes:duration>{{ post.podcast-duration | xml_escape }}</itunes:duration>
			<itunes:subtitle>{{ post.excerpt }}</itunes:subtitle>
		</item>
		{% endif %}
		{% endfor %}
	</channel>
</rss>
